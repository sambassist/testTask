.button
    color white
    text-decoration none
    background linear-gradient(to left, #9971d2, #00b1fc);
    border-radius 12px
    width fit-content
    padding 20px 60px
    text-align center
    font-weight 600
    font-size 24px
    transition all 100ms ease-in-out

    &:hover
        opacity 0.7

    &:active
        box-shadow 0 0 20px #b77ffc inset
        opacity 1
