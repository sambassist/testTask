.footer
    width 100%
    font-family Arial, Helvetica, sans-serif
    font-size 12px
    color $normalTextColor

    &__first-line
        width 100%
        display flex
        flex-direction row
        justify-content space-between
        @media screen and (max-width 767px)
            flex-wrap wrap
        @media screen and (max-width 576px)
            justify-content center

    &__first-line-items
        display inline-flex
        flex-direction column
        @media screen and (max-width 576px)
            width 195px
            padding 20px 20px 0 20px
            text-align center

    &__logo-link
        display inline-block
        width 195px

    &__link-image
        display block
        width 100%

    &__logo-description
        max-width 195px
        text-align right
        color $lightTextColor

    &__links-title
        font-size 13px
        font-weight bold
        color $blackTextColor
        margin-top 0

    &__link
        padding-bottom 10px
        color $normalTextColor
        text-decoration none

        &:last-child
            padding-bottom 0

        &:hover
            text-decoration underline

        &_light
            color $lightTextColor

        &_bold
            font-weight bold
            font-size 13px
            padding 0 10px

    &__button-link
        width fit-content
        background-color $blueColor
        color white
        padding 10px
        font-size 13px
        text-decoration none
        border-radius 3px
        font-weight bold
        margin-right 18px
        transition background-color 100ms ease-in-out
        @media screen and (max-width 576px)
            margin 0 auto

        &:hover
            background-color lighten($blueColor, 15)

    &__second-line
        border-bottom 1px solid lighten($lightTextColor, 30)
        border-top 1px solid lighten($lightTextColor, 30)
        text-align center
        display flex
        flex-direction column
        justify-content center
        color $lightTextColor

    &__additional-links
        padding 20px 0
        display flex
        flex-direction row
        align-items center
        justify-content center

        &_social
            padding 0

    &__social-icon-link
        display inline-flex
        width 30px
        height 30px
        align-items center
        padding 0 20px
        @media screen and (max-width 576px)
            padding 0 10px

        img
            display inline-flex
            max-width 100%

    &__third-line
        text-align center
        display flex
        flex-direction column
        justify-content center
        color $lightTextColor