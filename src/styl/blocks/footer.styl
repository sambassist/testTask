.footer
    width 100%
    font-family Arial, Helvetica, sans-serif
    font-size 12px
    color $normalTextColor

    &__first-line
        width 100%
        display flex
        flex-direction row
        justify-content space-between
        border-bottom 1px solid lighten($lightTextColor, 30)

    &__first-line-items
        display inline-flex
        flex-direction column

    &__logo-link
        display inline-block
        width 195px

    &__link-image
        display block
        width 100%

    &__logo-description
        max-width 195px
        text-align right
        color $lightTextColor

    &__links-title
        font-size 13px
        font-weight bold
        color $blackTextColor
        margin-top 0

    &__link
        padding-bottom 10px
        color $normalTextColor
        text-decoration none

        &:last-child
            padding-bottom 0

        &:hover
            text-decoration underline

    &__button-link
        background-color $blueColor
        color white
        padding 10px
        font-size 13px
        text-decoration none
        border-radius 3px
        font-weight bold
        margin-right 5px
        transition background-color 100ms ease-in-out

        &:hover
            background-color lighten($blueColor, 15)